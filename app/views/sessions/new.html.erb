<div class="col-md-6 col-md-offset-3">
	<%= form_for :session, url: login_path, html: { class: "new_form"} do |f| %>
	
		<%= f.label :email, "邮箱" %>
		<%= f.text_field :email, class: "form-control" %>
	
		<%= f.label :password, "密码" %>
		<%= f.password_field :password, class: "form-control" %>
	
		<%= f.submit "登陆", class: "btn btn-primary submit_button" %>
	<% end %>

	<p>新用户 <%= link_to "注册", signup_path %>
</div>