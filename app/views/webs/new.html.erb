<div class="col-md-6 col-md-offset-3">
	<%= form_for(@web, html: { multipart: true, class: "new_form" }) do |f| %>
		<%= f.label :name, "名字" %>
		<%= f.text_field :name, class: "form-control" %>
	
		<%= f.label :address, "地址" %>
		<%= f.text_field :address, class: "form-control" %>
	
		<%= f.label :image_big, "图片" %>
		<%= f.file_field :image_big, class: "form-control" %>
	
		<%= f.label :description, "简介" %>
		<%= f.text_area :description, class: "form-control" %>
	
		<%= f.submit "上传", class: "btn btn-primary submit_button" %>
	<% end %>	
</div>