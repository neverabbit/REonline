	
	<%= form_for @user, html: { class: "new_form", id: "new_description" }, remote: true do |f| %>
		<% @item = @user %>
		<%= render 'shared/error_messages' %>
	
		<%= f.label :user_description, "简介", class: "inline_input" %>
		<%= f.text_area :user_description, class: "inline_input" %>
	
		<%= button_tag "确定", class: "inline_input" %>
		<%= button_tag "取消", type: "button", class: 'inline_input', id: 'description_cancel_button' %>
	<% end %>